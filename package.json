{
  "name": "arcad-transformer-rpg",
  "publisher": "arcadsoftware",
  "displayName": "ARCAD-Transformer RPG",
  "description": "Use ARCAD Transformer RPG to convert your RPG code to Full Free RPG within VSCode.",
  "version": "0.0.1-dev.0",
  "icon": "images/tfrrpg.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ARCAD-Software/arcad-transformer-rpg"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "extensionDependencies": [
    "HalcyonTechLtd.code-for-ibmi"
  ],
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "keywords": [
    "ibmi",
    "iseries",
    "as400",
    "arcad",
    "transformer-rpg",
    "transformer",
    "converter",
    "RPG",
    "RPGLE",
    "RPG free"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "configuration": {
      "title": "ARCAD Transformer RPG",
      "properties": {
        "arcad-transformer-rpg.command": {
          "type": "object",
          "default": {
            "SRCLIB": "",
            "SRCMBR": "",
            "SRCTYPE": "",
            "SRCFILE": "",
            "OBJTYPE": "*NONE",
            "CVTCLCSPEC": "*FREE",
            "CVTDCLSPEC": "*YES",
            "EXPCSPECPY": "*NO",
            "FULLYFREE": "*YES",
            "MAXNOTFREE": "*NONE",
            "FIRSTCOL": 1,
            "USEPARMNUM": "*NO",
            "TOSRCFILE": "*NONE",
            "TOSRCMBR": "*FROMMBR",
            "TOSRCLIB": "",
            "REPLACE": "*NO",
            "CVT_CALL": "*YES",
            "CVT_GOTO": "*ADVANCED",
            "TAGFLDNAME": "ATag",
            "CVT_KLIST": "*YES",
            "CVT_MOVEA": "*ADVANCED",
            "INDENT": 2,
            "INDENTCMT": "*YES",
            "OPCODECASE": "*MIXED",
            "BLTFNCCASE": "*MIXED",
            "SPCWRDCASE": "*MIXED",
            "KEYWRDCASE": "*MIXED",
            "FLGCVTTYPE": "*NO",
            "CLRXREF": "*YES",
            "CLRFRMCHG": "*YES",
            "PRECPL": "*ARCAD",
            "SRCDATE": "*CURRENT",
            "CVT_SUBR": "*NO",
            "CHECKIND": "*WNG1",
            "SCANIND": "*WNG1",
            "LOOKUPIND": "*WNG1",
            "NUMTRUNCZ": "*YES",
            "NUMTRUNCA": "*YES",
            "NUMTRUNCB": "*NO",
            "NUMTRUNCM": "*YES",
            "NUMTRUNCD": "*YES",
            "EMPTYCMT": "*KEEP",
            "ALPHTONUM": "*YES",
            "KEEPDSIND": "*NO"
          }
        }
      }
    },
    "commands": [
      {
        "category": "ARCAD Transformer RPG",
        "command": "arcad-transformer-rpg.convertToFullyFree",
        "title": "Transformer : Convert to Fully Free",
        "enablement": "code-for-ibmi:connected"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "arcad-transformer-rpg.convertToFullyFree",
          "when": "view == objectBrowser && viewItem == member"
        }
      ]
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "nls": "npx @vscode/l10n-dev export --outDir ./l10n ./src",
    "build": "npm run clean && webpack --mode development",
    "watch": "npm run clean && webpack --mode development --watch",
    "vscode:prepublish": "npm run clean && webpack --mode production --devtool hidden-source-map",
    "package": "vsce package --pre-release"
  },
  "devDependencies": {
    "@halcyontech/vscode-ibmi-types": "^2.10",
    "rimraf": "^5",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@types/vscode": "^1.84.0",
    "@types/node": "18.x",
    "typescript": "^5.2.2",
    "esbuild-loader": "^3.0.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}